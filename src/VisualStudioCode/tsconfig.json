{
    "compileOnSave": true,
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./typings"],
        "outDir": "./out/",
        "module": "commonjs",
        "target": "ES6",
        "lib": [ "es6", "dom" ],
        "sourceMap": true,
        "allowUnusedLabels": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "node_modules"
    ]
}